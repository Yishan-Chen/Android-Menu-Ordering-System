<?xml version="1.0" encoding="utf-8"?>
<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:shrinkColumns="0"
        android:stretchColumns="0" >
        <TableRow
            android:id="@+id/waimai"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/layout_selector2"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dip" >

                <ImageView
                    android:id="@+id/octopus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/octopus2" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@+id/octopus"
                    android:includeFontPadding="false"
                    android:text="章记小炒"
                    android:textSize="18.0sp" />

                <TextView
                    android:id="@+id/rankText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="4sp"
                    android:layout_toRightOf="@+id/octopus"
                    android:text="推荐等级："
                    android:textSize="13sp" />
				
                <RatingBar
                    android:id="@+id/rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/rankText"
                    android:layout_toRightOf="@+id/rankText"
                    android:numStars="5"
                    android:rating="4"
                    android:stepSize="0.5" />
                
                <TextView
                    android:id="@+id/intro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="25sp"
                    android:layout_toRightOf="@+id/octopus"
                    android:text="简介：专营各类小炒"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="127sp"
                    android:layout_marginTop="20sp"
                    android:layout_toRightOf="@+id/name"
                    android:text="¥12"
                    android:textColor="#ff4200"
                    android:textSize="15.0sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="3sp"
                    android:layout_marginTop="24sp"
                    android:layout_toRightOf="@+id/price"
                    android:text="起送"
                    android:textSize="12.0sp" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/price"
                    android:layout_gravity="right"
                    android:layout_marginLeft="90sp"
                    android:layout_marginTop="3sp"
                    android:layout_toRightOf="@+id/intro"
                    android:text="免配送費"
                    android:textSize="12.0sp" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/intro"
                    android:layout_marginTop="4sp"
                    android:background="#c6bdba" />

                

            </RelativeLayout>

		</TableRow>
 
   		 <ImageView
	       	android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="bottom"
	        android:src="@drawable/eastgate" />
    
</TableLayout>